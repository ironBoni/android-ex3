<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="377dp"
    tools:context=".fragments.ConversationFragment"
    android:background="@drawable/background_chat">
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_height="match_parent"
        android:layout_width="377dp"
        android:background="@color/chatBackground">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesViewFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolBarFrag"
            android:layout_marginBottom="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/convLayoutFrag">

            <EditText
                android:id="@+id/txtEnterMsgFrag"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/background_msg"
                android:ems="8"
                android:hint="   Please enter a message"
                android:imeOptions="actionGo"
                android:inputType="textPersonName"
                android:padding="9dp"
                android:paddingBottom="8dp" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/btnSendConvFrag"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0"
                android:src="@drawable/send_button"
                ></ImageView>
        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnBackFrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:layout_marginTop="4dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_viewFrag"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grayLight"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/user_imageFrag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grayLight"
                        android:src="@drawable/default_avatar" />
                </androidx.cardview.widget.CardView>
                <!--<ImageView
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:id="@+id/user_image"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:padding="6dp"
                    android:src="@drawable/default_avatar"
                    android:layout_constraintBottom_toBottomOf="parent"
                    android:layout_constraintStart_toEndOf="@+id/btnBack"
                    android:layout_constraintTop_toTopOf="parent"/>-->

                <TextView
                    android:id="@+id/contactNicknameFrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Name"
                    android:textSize="21sp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="14dp"/>

                <ImageView
                    android:id="@+id/someFrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp" />

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_constraintBottom_toBottomOf="parent"
                    android:layout_constraintEnd_toEndOf="parent"
                    android:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/menu"
                    />
    -->
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
</LinearLayout>